{% set root = '../' %}
{% import "../macros/macros.twig" as macros %}

<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    {# SEO #}
    <title>{{ pageTitle }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">

    {# CSS FONTS #}
    {% block font -%}
        {# ... Use Google Font here #}
    {%- endblock %}

    {# CSS STYLES #}
    {%- block stylesheet %}
        <link rel="stylesheet" href="{{ root }}assets/css/styles.min.css">
        <link rel="stylesheet" href="{{ root }}assets/css/styles.min.css" media="print">
    {% endblock -%}

    {# FAVICONS #}
    {% block headFavicons %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ root }}assets/img/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ root }}assets/img/favicons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ root }}assets/img/favicons/favicon-16x16.png">
        <link rel="manifest" href="{{ root }}assets/img/favicons/site.webmanifest">
        <link rel="mask-icon" href="{{ root }}assets/img/favicons/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#00aba9">
        <meta name="theme-color" content="#ffffff">
        <meta name="apple-mobile-web-app-title" content="{{ projectRealName }}">
    {% endblock headFavicons %}
</head>

<body id="body" class="{{ pageClass }}">
{% block body %}
    {% block header %}
        {%- include "../components/header.twig" -%}
    {% endblock %}

    <main role="main" class="main-content">
            {% block mainContent "" %}
    </main>

    {% block footer %}
        {%- include "../components/footer.twig" -%}
    {% endblock %}
{% endblock body %}

{# JS SCRIPTS #}
{% block bottomScript %}
    <script defer src="{{ root }}assets/js/scripts-front.min.js"></script>
{% endblock bottomScript %}
</body>
</html>